  "paths": {
    "/api/users": {
      "get": {
        "tags": [
          "/api/users"
        ],
        "summary": "get users list",
        "description": "get users list",
        "responses": {
          "200": {
            "description": "return users list",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/get_user_200"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "/api/users"
        ],
        "summary": "authticate users or register users",
        "description": "authticate users or register users",
        "parameters": [
          {
            "name": "action",
            "in": "query",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            },
            "example": "register"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/body"
              },
              "examples": {
                "0": {
                  "value": "{\n    \"username\": \"user1\",\n    \"password\": \"test1\"\n}"
                },
                "1": {
                  "value": "{\n    \"username\": \"yzj\",\n    \"password\": \"yzj\"\n}"
                },
                "2": {
                  "value": "{\n    \"username\": \"yzj\",\n    \"password\": \"yzjYZJ1\"\n}"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful authenticate",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/post_user_200"
                }
              }
            }
          },
          "201": {
            "description": "Successful register",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/post_user_201"
                }
              }
            }
          },
          "401": {
            "description": "Bad password format",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/post_user_401"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/favourites": {
      "get": {
        "tags": [
          "/api/users"
        ],
        "summary": "get users favourites list",
        "description": "get users favourites list",
        "responses": {
          "200": {
            "description": "return users favourites list",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/movies"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "/api/users"
        ],
        "summary": "add to users favourites list",
        "description": "add to users favourites list",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/post_favourites_201"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "successful added",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/movies"
                }
              }
            }
          },
          "500": {
            "description": "something wrong",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/error"
                }
              }
            }
          }
        }
      }
    },
    "/api/movies": {
      "get": {
        "tags": [
          "/api/movies"
        ],
        "summary": "get movies list",
        "description": "get movies list",
        "responses": {
          "200": {
            "description": "return movies list",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/movies"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "servers": [
          {
            "url": "http://localhost:8080"
          }
        ]
      },
      "servers": [
        {
          "url": "http://localhost:8080"
        }
      ]
    },
    "/api/movies/{id}": {
      "get": {
        "tags": [
          "/api/movies"
        ],
        "summary": "get movie",
        "description": "get movie",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of movie to return",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "return movie",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "$ref": "#/components/schemas/movie"
                }
              }
            }
          }
        }
      }
    },
    "/api/movies/{id}/reviews": {
      "get": {
        "tags": [
          "/api/movies"
        ],
        "summary": "get movie's reviews",
        "description": "get movie's reviews",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of movie to return",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "return movie's review",
            "content": {
              "application/json; charset=utf-8": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "example": "review"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
