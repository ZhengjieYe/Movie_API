              "type": "string"
            }
          },
          "_id": {
            "type": "string",
            "example": "5fe866247882a6019cc77be2"
          },
          "username": {
            "type": "string",
            "example": "user1"
          },
          "password": {
            "type": "string",
            "example": "test1"
          }
        }
      },
      "post_user_200": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "token": {
            "type": "string",
            "example": "5fe866247882a6019cc77be2"
          }
        }
      },
